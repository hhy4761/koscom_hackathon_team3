<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="./login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  <body>
  <div class="row">
    <div class="col text-center">
      <h1>Sign In</h1>
      <form action="/apis/login" method="post">
        <div class="id1">
          <input type="text" name='id' id="id" style="width:300px;height:50px" placeholder="ID" oninput="handleOnInput(this)" >
        </div>
        <div class="pw1">
          <input type="password" id="password" name="password" style="width:300px;height:50px" placeholder="Password">
        </div>
        <button type="button" class="btn btn-primary btn-block mb-4" onclick="login()">Sign in</button>
    </form>
    </div>
  </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
  <script>
        function login(){
            var id2=document.getElementById("id");
            var pw2=document.getElementById("password")

            const data1 = JSON.stringify({id:id2.value, password:pw2.value})
            const p={
                method:"POST",
                headers:{
                    "Content-type":"application/json"
                },
                body:data1
            }
            fetch('/apis/login',p)
                .then((response)=>{
                    return response.json()
                })
                .then((data)=>{
                alert(data.message)
                    if(data.success==true){
                    location.href="/main"
                    }
                    else{

                    }
                })
        }

        function handleOnInput(e)  {
            e.value = e.value.replace(/[^A-Za-z0-9]/ig, '')
        }
  </script>
</html>
